.navbar {
  background-color: RGB(247, 247, 247);
  flex-direction: row; 
  display: flex; 
   
}

.navbar .item{  
  position: relative; 

  text-align: center;  
  font-size: 30rpx;
  line-height: 80rpx; 
  flex: auto;
  color: gray;
  display: inline-block;
  margin-left: 40rpx;
  margin-right: 40rpx;
}  

.navbar .item.active {
  color: black;
}

.navbar .item.active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: black;
}

