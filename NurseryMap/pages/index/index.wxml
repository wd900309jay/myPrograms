<!--pages/index/index.wxml-->
<view>
  <view class="page-section page-section-gap">
    <map
      id="NurseriesMap"
      scale="{{scale}}"
      style="width: 100%; height: 100vh;"
      latitude="{{latitude}}"
      longitude="{{longitude}}"
      markers="{{markers}}"
      controls="{{controls}}"
      bindcontroltap="controltap"
      bindcallouttap='markerstap'
      show-location
    ></map>
  </view>
  <view id="marker_info">
  
  </view>  
</view>
